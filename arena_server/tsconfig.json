{
  "compilerOptions": {
    "module": "Node16",
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "typeRoots": ["./types", "./node_modules/@types"],
    "paths": {
      "*": ["node_modules/*"]
    },
    "lib": ["DOM", "DOM.Iterable", "ES2017.TypedArrays"],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": ["src/**/*"],
  "exclude": ["src/public"]
}
